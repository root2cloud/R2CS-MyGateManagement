<odoo>
    <!-- views/res_partner_category_views.xml -->
    <record id="view_res_partner_category_list" model="ir.ui.view">
        <field name="name">res.partner.category.custom.list</field>
        <field name="model">res.partner.category.custom</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    <record id="view_res_partner_category_form" model="ir.ui.view">
        <field name="name">res.partner.category.custom.form</field>
        <field name="model">res.partner.category.custom</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_res_partner_category" model="ir.actions.act_window">
        <field name="name">Contact Categories</field>
        <field name="res_model">res.partner.category.custom</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- views/res_partner_view.xml -->

    <record id="view_res_partner_form_inherit_category" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.category.custom</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Put it near existing fields, adjust xpath as you like -->
            <xpath expr="//field[@name='aadhar_number']" position="after">
                <field name="category_custom_id" placeholder="Enter Category"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Daily Slots">
                    <field name="daily_slot_ids">
                        <list editable="bottom">
                            <field name="start_time" widget="float_time"/>
                            <field name="end_time" widget="float_time"/>
                            <field name="is_available" widget="boolean_toggle"/>
                            <field name="booked_by" optional="hide"/>
                            <field name="booking_notes" optional="hide"/>
                            <field name="notes"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
    <record id="view_partner_form_inherit_security_guard" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.security.guard</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add checkbox after category_ids field -->
            <xpath expr="//field[@name='category_custom_id']" position="after">
                <field name="is_security_guard"/>
            </xpath>

            <xpath expr="//field[@name='function']" position="after">
                <field name="community_role"
                       />
            </xpath>
        </field>
    </record>

    <menuitem id="menu_res_partner_category"
              name="Categories"
              parent="menu_master_data_root"
              action="action_res_partner_category"
              sequence="10"/>

</odoo>