<odoo>
    <!-- Form View -->
    <record id="view_form_flat_maintenance" model="ir.ui.view">
        <field name="name">flat.maintenance.form</field>
        <field name="model">flat.maintenance</field>
        <field name="arch" type="xml">
            <form string="Maintenance">
                <header>
                    <button name="action_confirm" string="Confirm" type="object"
                            class="btn-primary" invisible="status != 'draft'"/>

                    <button name="action_draft" string="Reset to Draft" type="object"
                            class="btn-secondary" invisible="status != 'confirmed'"/>

                    <!-- Create Maintenance Invoice Button - Always visible after confirm -->
                    <button name="action_create_maintenance_invoice"
                            string="Create Maintenance Invoice"
                            type="object"
                            class="btn-success"
                            invisible="status == 'draft'"/>

                    <field name="status" widget="statusbar" statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Smart Button to View All Invoices -->
                        <button name="action_view_all_invoices"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-file-text-o"
                                invisible="invoice_count == 0">
                            <field name="invoice_count" widget="statinfo" string="Invoices"/>
                        </button>
                    </div>

                    <group>
                        <group string="Tenant &amp; Property">
                            <field name="tenant_id"/>
                            <field name="flat_id"/>
                            <field name="building_id" readonly="1"/>
                            <field name="flat_area" widget="float" readonly="1"

                                   string="Flat Area (sq.ft.)"/>
                        </group>
                        <group>
                            <field name="total_amount" widget="monetary" readonly="1"
                                   style="font-size: 20px; font-weight: bold;"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <separator string="Maintenance Calculation"/>

                    <group>
                        <group>
                            <field name="calculation_type"/>

                            <field name="standard_amount"
                                   invisible="calculation_type == 'area'"/>

                            <field name="area_rate"
                                   invisible="calculation_type == 'standard'"/>

                        </group>
                    </group>

                    <group>
                        <group>
                            <div class="o_form_label col-12" string="Maintenance Type"/>
                            <div class="col-12">
                                <field name="calculation_type" readonly="1"/>
                                <div>
                                    (Standard Amount:<field name="standard_amount" widget="monetary" readonly="1"/>)
                                </div>
                                <div>
                                    (Area Rate:
                                    <field name="area_rate" readonly="1"/>
                                    ×
                                    Flat Area:
                                    <field name="flat_area" readonly="1"/>
                                    sq.ft.)
                                </div>
                            </div>
                        </group>
                    </group>

                    <group string="Additional Notes">
                        <field name="notes" nolabel="1" placeholder="Add any additional notes..."/>
                    </group>

                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_kanban_flat_maintenance" model="ir.ui.view">
        <field name="name">flat.maintenance.kanban</field>
        <field name="model">flat.maintenance</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="tenant_id"/>
                <field name="flat_id"/>
                <field name="building_id"/>
                <field name="flat_area"/>
                <field name="calculation_type"/>
                <field name="standard_amount"/>
                <field name="area_rate"/>
                <field name="total_amount"/>
                <field name="invoice_count"/>
                <field name="status"/>
                <field name="currency_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="tenant_id"/>
                                        </strong>
                                    </div>
                                    <span class="badge"
                                          t-att-class="record.status.raw_value === 'draft' ? 'text-bg-info' : 'text-bg-success'">
                                        <field name="status"/>
                                    </span>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <i class="fa fa-building"/>
                                            <field name="building_id"/>
                                            -
                                            <field name="flat_id"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <small>
                                                <field name="calculation_type"/>
                                                <span t-if="record.calculation_type.raw_value == 'standard'">
                                                    (<field name="standard_amount" widget="monetary"/>)
                                                </span>
                                                <span t-if="record.calculation_type.raw_value == 'area_based'">
                                                    (
                                                    <field name="area_rate"/>
                                                    ×
                                                    <field name="flat_area"/>
                                                    sq.ft.)
                                                </span>
                                            </small>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <strong style="font-size: 16px; color: #28a745;">
                                                Total:
                                                <field name="total_amount" widget="monetary"/>
                                            </strong>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.invoice_count.raw_value > 0">
                                            <i class="fa fa-file-text-o"/>
                                            <field name="invoice_count"/>
                                            Invoice(s)
                                        </span>
                                        <span t-else="" class="text-muted">
                                            <i class="fa fa-file-text-o"/>
                                            No Invoices
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- List View -->
    <record id="view_list_flat_maintenance" model="ir.ui.view">
        <field name="name">flat.maintenance.list</field>
        <field name="model">flat.maintenance</field>
        <field name="arch" type="xml">
            <list string="Maintenance">
                <field name="tenant_id"/>
                <field name="flat_id"/>
                <field name="building_id"/>
                <field name="flat_area" string="Area (sq.ft.)"/>
                <field name="calculation_type"/>
                <field name="total_amount"/>
                <field name="invoice_count"/>
                <field name="status" widget="badge"
                       decoration-info="status == 'draft'"
                       decoration-success="status == 'confirmed'"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_search_flat_maintenance" model="ir.ui.view">
        <field name="name">flat.maintenance.search</field>
        <field name="model">flat.maintenance</field>
        <field name="arch" type="xml">
            <search string="Maintenance">
                <field name="tenant_id"/>
                <field name="flat_id"/>
                <field name="building_id"/>
                <field name="calculation_type"/>
                <filter name="filter_draft" string="Draft" domain="[('status', '=', 'draft')]"/>
                <filter name="filter_confirmed" string="Confirmed" domain="[('status', '=', 'confirmed')]"/>
                <separator/>
                <filter name="filter_standard" string="Standard Type" domain="[('calculation_type', '=', 'standard')]"/>
                <filter name="filter_area_based" string="Area Based"
                        domain="[('calculation_type', '=', 'area_based')]"/>
                <separator/>
                <filter name="filter_has_invoices" string="Has Invoices" domain="[('invoice_count', '>', 0)]"/>
                <filter name="filter_no_invoices" string="No Invoices" domain="[('invoice_count', '=', 0)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_tenant" string="Tenant" context="{'group_by': 'tenant_id'}"/>
                    <filter name="group_building" string="Building" context="{'group_by': 'building_id'}"/>
                    <filter name="group_status" string="Status" context="{'group_by': 'status'}"/>
                    <filter name="group_calculation_type" string="Calculation Type"
                            context="{'group_by': 'calculation_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_flat_maintenance" model="ir.actions.act_window">
        <field name="name">Maintenance</field>
        <field name="res_model">flat.maintenance</field>
        <field name="view_mode">kanban,list,form</field>
    </record>
</odoo>

