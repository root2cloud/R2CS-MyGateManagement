<odoo>
    <!-- Community Festival Form View (Odoo 18 Clean - No attrs, No deprecated) -->
    <record id="view_community_festival_form" model="ir.ui.view">
        <field name="name">community.festival.form</field>
        <field name="model">community.festival</field>
        <field name="arch" type="xml">
            <form string="Festival / Event">
                <header>
                    <!-- Buttons will show/hide automatically based on groups or Python conditions in model -->
                    <button name="action_submit" type="object" string="Submit for Approval" class="btn-primary"/>
                    <button name="action_approve" type="object" string="Approve" class="btn-success"/>
                    <button name="action_reject" type="object" string="Reject" class="btn-danger"/>
                    <button name="action_set_to_draft" type="object" string="Set to Draft"/>
                    <!-- Statusbar kept but without statusbar_visible (not needed in Odoo 18) -->
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="e.g. Diwali 2025"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="community_id" options="{'no_create': True}"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <group>
                            <field name="total_expense" widget="monetary" readonly="1"/>
                            <field name="expense_account_id" domain="[('account_type', '=', 'expense')]"/>
                            <field name="approver_id"/>
                            <field name="move_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Expenses">
                            <field name="expense_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="amount" widget="monetary"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View (Replaced 'list' with 'list' as requested) -->
    <record id="view_community_festival_list" model="ir.ui.view">
        <field name="name">community.festival.list</field>
        <field name="model">community.festival</field>
        <field name="arch" type="xml">
            <list string="Festivals">
                <field name="name"/>
                <field name="community_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="total_expense" widget="monetary"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Kanban View (Clean & Modern for Odoo 18) -->
    <record id="view_community_festival_kanban" model="ir.ui.view">
        <field name="name">community.festival.kanban</field>
        <field name="model">community.festival</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="community_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="total_expense"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <strong class="o_kanban_record_title"><t t-esc="record.name.value"/></strong><br/>
                                <small><t t-esc="record.community_id.value"/></small><br/>
                                <div class="text-muted">
                                    <i class="fa fa-calendar"/>
                                    <t t-esc="record.date_start.value"/>
                                    <t t-if="record.date_end.value">â†’ <t t-esc="record.date_end.value"/></t>
                                    <t t-else=""> (Ongoing)</t>
                                </div>
                                <div class="mt-3">
                                    Total: <strong><field name="total_expense" widget="monetary"/></strong>
                                </div>
                                <div class="mt-2">
                                    <span class="badge badge-pill
                                        badge-secondary" t-if="record.state.value == 'draft'"/>
                                    <span class="badge badge-pill
                                        badge-warning" t-if="record.state.value == 'submitted'"/>
                                    <span class="badge badge-pill
                                        badge-success" t-if="record.state.value == 'approved'"/>
                                    <span class="badge badge-pill
                                        badge-danger" t-if="record.state.value == 'rejected'"/>
                                    <t t-esc="record.state.value"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action Window -->
    <record id="action_community_festival" model="ir.actions.act_window">
        <field name="name">Festivals &amp; Events</field>
        <field name="res_model">community.festival</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first festival/event!
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_community_festival_list"
              name="Festivals Expenses"
              parent="menu_flat_transaction_menu"
              action="action_community_festival"
              sequence="10"/>
</odoo>