<odoo>
    <data>
        <!-- Portal Page: Vehicles List -->
        <template id="portal_my_vehicles" name="My Vehicles">
            <t t-call="portal.portal_layout">
                <style>
                    .vehicle-portal-header {
                        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                        color: white;
                        padding: 2rem 0;
                        margin-bottom: 2rem;
                        border-radius: 10px;
                        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
                    }

                    .vehicle-portal-header h3 {
                        margin: 0;
                        font-weight: 600;
                        font-size: 1.8rem;
                    }

                    .vehicle-card {
                        border: none;
                        border-radius: 15px;
                        overflow: hidden;
                        transition: all 0.3s ease;
                        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
                        height: 100%;
                    }

                    .vehicle-card:hover {
                        transform: translateY(-5px);
                        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
                    }

                    .vehicle-type-badge {
                        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                        color: white;
                        padding: 0.35rem 0.75rem;
                        border-radius: 20px;
                        font-size: 0.875rem;
                        font-weight: 500;
                    }

                    .btn-add-vehicle {
                        background: white;
                        border-radius: 10px;
                        padding: 0.75rem 1.5rem;
                        font-weight: 500;
                        transition: all 0.3s ease;
                        box-shadow: 0 5px 15px rgba(255, 255, 255, 0.3);
                    }

                    .btn-add-vehicle:hover {
                        transform: translateY(-2px);
                        box-shadow: 0 8px 25px rgba(255, 255, 255, 0.4);
                    }
                </style>

                <div class="container mt-4">
                    <div class="row">
                        <div class="col-12">
                            <div class="vehicle-portal-header d-flex justify-content-between align-items-center px-4">
                                <h3><i class="fa fa-car mr-2"/> My Vehicles</h3>
                                <a href="/my/vehicles/new" class="btn btn-light btn-add-vehicle">
                                    <i class="fa fa-plus mr-1"/> Add Vehicle
                                </a>
                            </div>

                            <t t-if="vehicles">
                                <div class="row">
                                    <t t-foreach="vehicles" t-as="vehicle">
                                        <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
                                            <div class="card vehicle-card">
                                                <t t-if="vehicle.vehicle_photo">
                                                    <img t-att-src="image_data_uri(vehicle.vehicle_photo)" class="card-img-top" style="height: 220px; object-fit: cover;"/>
                                                </t>
                                                <t t-else="">
                                                    <div class="card-img-top d-flex align-items-center justify-content-center" style="height: 220px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                                        <i class="fa fa-car" style="font-size: 5rem; color: white; opacity: 0.5;"/>
                                                    </div>
                                                </t>
                                                <div class="card-body">
                                                    <h5 class="card-title"><t t-esc="vehicle.vehicle_number"/></h5>
                                                    <span class="vehicle-type-badge"><t t-esc="vehicle.vehicle_type.title()"/></span><br/>
                                                    <div class="mt-2">
                                                        <small class="d-block mb-1" t-if="vehicle.make">
                                                            <i class="fa fa-tag"/> <t t-esc="vehicle.make"/> <t t-if="vehicle.model" t-esc="vehicle.model"/>
                                                        </small>
                                                        <small class="d-block mb-1" t-if="vehicle.year">
                                                            <i class="fa fa-calendar"/> <t t-esc="vehicle.year"/>
                                                        </small>
                                                        <small class="d-block mb-1" t-if="vehicle.color">
                                                            <i class="fa fa-paint-brush"/> <t t-esc="vehicle.color"/>
                                                        </small>
                                                    </div>
                                                    <div class="mt-3 d-flex" style="gap: 0.5rem;">
                                                        <a t-attf-href="/my/vehicles/#{vehicle.id}/edit" class="btn btn-sm btn-secondary flex-fill">
                                                            <i class="fa fa-edit"/> Edit
                                                        </a>
                                                        <a t-attf-href="/my/vehicles/#{vehicle.id}/delete" class="btn btn-sm btn-danger flex-fill"
                                                           onclick="return confirm('Are you sure you want to delete this vehicle?');">
                                                            <i class="fa fa-trash"/> Delete
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </t>
                            <t t-else="">
                                <div class="text-center py-5" style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); border-radius: 15px;">
                                    <i class="fa fa-car" style="font-size: 5rem; color: #cbd5e0;"/>
                                    <h4 class="mt-3" style="color: #4a5568;">No vehicles registered yet</h4>
                                    <p style="color: #718096;">Add your first vehicle to get started</p>
                                    <a href="/my/vehicles/new" class="btn btn-primary mt-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; border-radius: 10px; padding: 0.75rem 1.5rem;">
                                        <i class="fa fa-plus mr-1"/> Add Your First Vehicle
                                    </a>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Portal Page: Add/Edit Vehicle Form -->
        <template id="portal_vehicle_form" name="Vehicle Form">
            <t t-call="portal.portal_layout">
                <style>
                    .vehicle-form-header {
                        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                        color: white;
                        text-align: center;
                        padding: 2rem;
                        border-radius: 15px 15px 0 0;
                    }

                    .vehicle-form-header i {
                        font-size: 2.5rem;
                        display: block;
                        margin-bottom: 0.5rem;
                    }

                    .vehicle-form-header h3 {
                        margin: 0;
                        font-weight: 600;
                    }

                    .vehicle-form-container {
                        border-radius: 15px;
                        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
                    }

                    .form-control {
                        border-radius: 10px;
                        border: 2px solid #e2e8f0;
                        padding: 0.75rem 1rem;
                    }

                    .form-control:focus {
                        border-color: #667eea;
                        box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
                        outline: none;
                    }

                    .btn-primary {
                        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                        border: none;
                        border-radius: 10px;
                        padding: 0.875rem 2.5rem;
                        font-weight: 600;
                    }

                    .btn-primary:hover {
                        transform: translateY(-2px);
                        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
                    }
                </style>

                <div class="container mt-4 mb-5">
                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <div class="card vehicle-form-container">
                                <div class="vehicle-form-header">
                                    <i t-if="vehicle" class="fa fa-edit"/>
                                    <i t-else="" class="fa fa-car"/>
                                    <h3 t-if="vehicle">Edit Vehicle</h3>
                                    <h3 t-else="">Add Vehicle</h3>
                                </div>
                                <div class="card-body p-4">
                                    <form action="/my/vehicles/save" method="POST" enctype="multipart/form-data">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <input type="hidden" name="vehicle_id" t-att-value="vehicle.id if vehicle else 'None'"/>

                                        <div class="form-group">
                                            <label><i class="fa fa-camera mr-1"/> Vehicle Photo</label>
                                            <input type="file" class="form-control-file" name="vehicle_photo" accept="image/*"/>
                                            <t t-if="vehicle and vehicle.vehicle_photo">
                                                <img t-att-src="image_data_uri(vehicle.vehicle_photo)" class="img-thumbnail mt-2" style="max-width: 200px; border-radius: 10px;"/>
                                            </t>
                                        </div>

                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label><i class="fa fa-hashtag mr-1"/> Vehicle Number *</label>
                                                <input type="text" class="form-control" name="vehicle_number" t-att-value="vehicle.vehicle_number if vehicle else ''" required="1" placeholder="e.g., AP-01-AB-1234"/>
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label><i class="fa fa-car mr-1"/> Vehicle Type *</label>
                                                <select class="form-control" name="vehicle_type" required="1">
                                                    <option value="car" t-att-selected="vehicle and vehicle.vehicle_type == 'car' and 'selected' or ''">Car</option>
                                                    <option value="motorcycle" t-att-selected="vehicle and vehicle.vehicle_type == 'motorcycle' and 'selected' or ''">Motorcycle</option>
                                                    <option value="bicycle" t-att-selected="vehicle and vehicle.vehicle_type == 'bicycle' and 'selected' or ''">Bicycle</option>
                                                    <option value="scooter" t-att-selected="vehicle and vehicle.vehicle_type == 'scooter' and 'selected' or ''">Scooter</option>
                                                    <option value="other" t-att-selected="vehicle and vehicle.vehicle_type == 'other' and 'selected' or ''">Other</option>

                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label>Make/Brand</label>
                                                <input type="text" class="form-control" name="make" t-att-value="vehicle.make if vehicle else ''" placeholder="e.g., Honda, Toyota"/>
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label>Model</label>
                                                <input type="text" class="form-control" name="model" t-att-value="vehicle.model if vehicle else ''" placeholder="e.g., City, Innova"/>
                                            </div>
                                        </div>

                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label><i class="fa fa-calendar mr-1"/> Year</label>
                                                <input type="number" class="form-control" name="year" t-att-value="vehicle.year if vehicle else ''" placeholder="e.g., 2020" min="1900" max="2030"/>
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label><i class="fa fa-paint-brush mr-1"/> Color</label>
                                                <input type="text" class="form-control" name="color" t-att-value="vehicle.color if vehicle else ''" placeholder="e.g., White, Blue"/>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label>Additional Notes</label>
                                            <textarea class="form-control" name="notes" rows="3" placeholder="Any additional information about the vehicle..."><t t-if="vehicle" t-esc="vehicle.notes"/></textarea>
                                        </div>

                                        <div class="text-center mt-4">
                                            <button type="submit" class="btn btn-primary btn-lg">
                                                <i class="fa fa-check mr-2"/> Save Vehicle
                                            </button>
                                            <a href="/my/vehicles" class="btn btn-secondary btn-lg ml-2" style="border-radius: 10px; padding: 0.875rem 2.5rem;">
                                                <i class="fa fa-times mr-2"/> Cancel
                                            </a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
