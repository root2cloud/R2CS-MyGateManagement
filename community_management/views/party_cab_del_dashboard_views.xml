<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Dashboard Action -->
        <record id="action_community_access_dashboard" model="ir.actions.act_window">
            <field name="name">Access &amp; Guest Management Dashboard</field>
            <field name="res_model">community.access.dashboard</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
        </record>

        <!-- Dashboard Menu Item -->
        <menuitem id="menu_community_access_dashboard"
                  name="Access Dashboard"
                  parent="menu_community_dashboard_root"
                  sequence="3"
                  action="action_community_access_dashboard"/>

        <!-- Dashboard Form View -->
        <record id="view_community_access_dashboard_form" model="ir.ui.view">
            <field name="name">community.access.dashboard.form</field>
            <field name="model">community.access.dashboard</field>
            <field name="arch" type="xml">
                <form string="Community Access &amp; Guest Management Dashboard" class="oe_dashboard_form">
                    <header>
                        <h1 style="color: #2c3e50; font-weight: 700; font-size: 2rem;">
                            <i class="fa fa-door-open mr-2" title="Access Dashboard"/>
                            Access &amp; Guest Management Dashboard
                        </h1>
                        <div style="float: right;">
                            <button name="action_refresh_dashboard" type="object" string="Refresh" class="btn-primary"/>
                        </div>
                    </header>
                    <sheet>
                        <div style="padding: 20px; background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);">
                            <!-- Top Stats Cards Row - Gradient Colors -->
                            <div style="display: flex; flex-wrap: wrap; gap: 20px; margin-bottom: 30px;">
                                <!-- Card 1: Visitor Requests (Added before Cab Approvals) -->
                                <div style="flex: 1; min-width: 250px;">
                                    <div style="background: linear-gradient(135deg, #1abc9c 0%, #16a085 100%); color: white; padding: 20px; border-radius: 15px; height: 100%; box-shadow: 0 6px 12px rgba(26, 188, 156, 0.2); transition: transform 0.3s ease;">
                                        <div style="display: flex; justify-content: space-between; align-items: center;">
                                            <div>
                                                <h6 style="font-size: 0.9rem; text-transform: uppercase; margin-bottom: 10px; opacity: 0.9;">
                                                    Visitor Requests
                                                </h6>
                                                <h2 style="margin: 0; font-size: 2.5rem; font-weight: 700;">
                                                    <field name="total_visitor_requests" widget="statinfo"/>
                                                </h2>
                                            </div>
                                            <div>
                                                <i class="fa fa-users fa-3x" style="opacity: 0.5;" title="Visitors"/>
                                            </div>
                                        </div>
                                        <p style="margin-top: 15px; font-size: 0.9rem;">
                                            Today:
                                            <field name="today_visitor_requests" widget="statinfo"/>
                                        </p>
                                    </div>
                                </div>
                                <!-- Card 1: Cab Approvals -->
                                <div style="flex: 1; min-width: 250px;">
                                    <div style="background: linear-gradient(135deg, #3498db 0%, #2980b9 100%); color: white; padding: 20px; border-radius: 15px; height: 100%; box-shadow: 0 6px 12px rgba(52, 152, 219, 0.2); transition: transform 0.3s ease;">
                                        <div style="display: flex; justify-content: space-between; align-items: center;">
                                            <div>
                                                <h6 style="font-size: 0.9rem; text-transform: uppercase; margin-bottom: 10px; opacity: 0.9;">
                                                    Cab Approvals
                                                </h6>
                                                <h2 style="margin: 0; font-size: 2.5rem; font-weight: 700;">
                                                    <field name="total_cab_approvals" widget="statinfo"/>
                                                </h2>
                                            </div>
                                            <div>
                                                <i class="fa fa-taxi fa-3x" style="opacity: 0.5;" title="Cabs"/>
                                            </div>
                                        </div>
                                        <p style="margin-top: 15px; font-size: 0.9rem;">
                                            Active:
                                            <field name="active_cab_approvals" widget="statinfo"/>
                                        </p>
                                    </div>
                                </div>

                                <!-- Card 2: Delivery Passes -->
                                <div style="flex: 1; min-width: 250px;">
                                    <div style="background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%); color: white; padding: 20px; border-radius: 15px; height: 100%; box-shadow: 0 6px 12px rgba(46, 204, 113, 0.2); transition: transform 0.3s ease;">
                                        <div style="display: flex; justify-content: space-between; align-items: center;">
                                            <div>
                                                <h6 style="font-size: 0.9rem; text-transform: uppercase; margin-bottom: 10px; opacity: 0.9;">
                                                    Delivery Passes
                                                </h6>
                                                <h2 style="margin: 0; font-size: 2.5rem; font-weight: 700;">
                                                    <field name="total_delivery_passes" widget="statinfo"/>
                                                </h2>
                                            </div>
                                            <div>
                                                <i class="fa fa-truck fa-3x" style="opacity: 0.5;" title="Delivery"/>
                                            </div>
                                        </div>
                                        <p style="margin-top: 15px; font-size: 0.9rem;">
                                            Active:
                                            <field name="active_delivery_passes" widget="statinfo"/>
                                        </p>
                                    </div>
                                </div>

                                <!-- Card 3: Guest Invites -->
                                <div style="flex: 1; min-width: 250px;">
                                    <div style="background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%); color: white; padding: 20px; border-radius: 15px; height: 100%; box-shadow: 0 6px 12px rgba(155, 89, 182, 0.2); transition: transform 0.3s ease;">
                                        <div style="display: flex; justify-content: space-between; align-items: center;">
                                            <div>
                                                <h6 style="font-size: 0.9rem; text-transform: uppercase; margin-bottom: 10px; opacity: 0.9;">
                                                    Guest Invites
                                                </h6>
                                                <h2 style="margin: 0; font-size: 2.5rem; font-weight: 700;">
                                                    <field name="total_guest_invites" widget="statinfo"/>
                                                </h2>
                                            </div>
                                            <div>
                                                <i class="fa fa-user-friends fa-3x" style="opacity: 0.5;"
                                                   title="Guests"/>
                                            </div>
                                        </div>
                                        <p style="margin-top: 15px; font-size: 0.9rem;">
                                            Total Guests:
                                            <field name="total_guests" widget="statinfo"/>
                                        </p>
                                    </div>
                                </div>

                                <!-- Card 4: Party Invites -->
                                <div style="flex: 1; min-width: 250px;">
                                    <div style="background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%); color: white; padding: 20px; border-radius: 15px; height: 100%; box-shadow: 0 6px 12px rgba(231, 76, 60, 0.2); transition: transform 0.3s ease;">
                                        <div style="display: flex; justify-content: space-between; align-items: center;">
                                            <div>
                                                <h6 style="font-size: 0.9rem; text-transform: uppercase; margin-bottom: 10px; opacity: 0.9;">
                                                    Party Invites
                                                </h6>
                                                <h2 style="margin: 0; font-size: 2.5rem; font-weight: 700;">
                                                    <field name="total_party_invites" widget="statinfo"/>
                                                </h2>
                                            </div>
                                            <div>
                                                <i class="fa fa-glass-cheers fa-3x" style="opacity: 0.5;"
                                                   title="Parties"/>
                                            </div>
                                        </div>
                                        <p style="margin-top: 15px; font-size: 0.9rem;">
                                            Upcoming:
                                            <field name="upcoming_parties" widget="statinfo"/>
                                        </p>
                                    </div>
                                </div>

                                <!-- Card 5: Visiting Help -->
                                <div style="flex: 1; min-width: 250px;">
                                    <div style="background: linear-gradient(135deg, #f39c12 0%, #d35400 100%); color: white; padding: 20px; border-radius: 15px; height: 100%; box-shadow: 0 6px 12px rgba(243, 156, 18, 0.2); transition: transform 0.3s ease;">
                                        <div style="display: flex; justify-content: space-between; align-items: center;">
                                            <div>
                                                <h6 style="font-size: 0.9rem; text-transform: uppercase; margin-bottom: 10px; opacity: 0.9;">
                                                    Visiting Help
                                                </h6>
                                                <h2 style="margin: 0; font-size: 2.5rem; font-weight: 700;">
                                                    <field name="total_visiting_help" widget="statinfo"/>
                                                </h2>
                                            </div>
                                            <div>
                                                <i class="fa fa-hands-helping fa-3x" style="opacity: 0.5;"
