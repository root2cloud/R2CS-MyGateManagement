<odoo>

    <record id="view_notice_board_search" model="ir.ui.view">
        <field name="name">property.notice.board.search</field>
        <field name="model">property.notice.board</field>
        <field name="arch" type="xml">
            <search string="Search Notice Board">

                <filter name="active_filter" string="Active" domain="[('active','=',True)]"/>
                <filter name="inactive_filter" string="Inactive" domain="[('active','=',False)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_notice_type" string="Notice Type"
                            context="{'group_by':'notice_type'}"/>
                </group>

            </search>
        </field>
    </record>


    <record id="view_notice_board_list" model="ir.ui.view">
        <field name="name">property.notice.board.list</field>
        <field name="model">property.notice.board</field>
        <field name="arch" type="xml">
            <list string="Notice Board">
                <field name="name"/>
                <field name="notice_type"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_notice_board_form" model="ir.ui.view">
        <field name="name">property.notice.board.form</field>
        <field name="model">property.notice.board</field>
        <field name="arch" type="xml">
            <form string="Notice Board">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="notice_type"/>
                            <field name="description" widget="html"/>
                            <field name="image" widget="image" options="{'preview_image': 'image'}"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="target_group_ids" widget="many2many_tags"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>

        </field>
    </record>


    <!-- Action to open Notice Board list -->
    <record id="action_notice_board" model="ir.actions.act_window">
        <field name="name">Notice Board</field>
        <field name="res_model">property.notice.board</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
    </record>

    <!-- Menu item under your module root (adjust parent as needed) -->
    <menuitem id="menu_notice_board" name="Notice Board" parent="menu_community_management_root"
              action="action_notice_board" sequence="40"/>
</odoo>
