<odoo>
    <!-- Action -->
    <record id="action_community_lead" model="ir.actions.act_window">
        <field name="name">Community Leads</field>
        <field name="res_model">community.lead</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Items -->



    <!-- list View -->
    <record id="view_community_lead_list" model="ir.ui.view">
        <field name="name">community.lead.list</field>
        <field name="model">community.lead</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="mobile"/>
                <field name="email"/>
                <field name="community_id"/>
                <field name="customer_type"/>
                <field name="city"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_community_lead_form" model="ir.ui.view">
        <field name="name">community.lead.form</field>
        <field name="model">community.lead</field>
        <field name="arch" type="xml">
            <form string="Community Lead Inquiry">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="mobile"/>
                        <field name="email"/>
                        <field name="community_id"/>
                        <field name="customer_type"/>
                        <field name="city"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
