<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Amenity List View -->
    <record id="view_amenity_list" model="ir.ui.view">
        <field name="name">community.amenity.list</field>
        <field name="model">community.amenity</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="amenity_type"/>
                <field name="amount"/>
                <field name="max_booking_per_day"/>
                <field name="active"/>

            </list>
        </field>
    </record>

    <!-- Amenity Form View -->
    <record id="view_amenity_form" model="ir.ui.view">
        <field name="name">community.amenity.form</field>
        <field name="model">community.amenity</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="amenity_type"/>
                        <field name="amount"/>
                        <field name="max_booking_per_day"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Bookings">
                            <field name="booking_ids">
                                <list>
                                    <field name="partner_id"/>
                                    <field name="booking_date"/>
                                    <field name="state"/>
                                    <field name="payment_status"/>
                                    <field name="amount"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Amenity Action -->
    <record id="action_community_amenity" model="ir.actions.act_window">
        <field name="name">Amenities</field>
        <field name="res_model">community.amenity</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_amenity_list"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create amenities such as Club House, Gym, Swimming Pool.
            </p>
        </field>
    </record>


</odoo>