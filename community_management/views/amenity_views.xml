<odoo>
    <!-- Amenity Form View -->
    <record id="view_amenity_form" model="ir.ui.view">
        <field name="name">amenity.amenity.form</field>
        <field name="model">amenity.amenity</field>
        <field name="arch" type="xml">
            <form string="Amenity">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="description"/>
                        <field name="image" widget="image"/>
                    </group>
                    <notebook>
                        <page string="Time Slots">
                            <field name="slot_ids">
                                <list editable="bottom">
                                    <field name="start_time" widget="float_time"/>
                                    <field name="end_time" widget="float_time"/>
                                    <field name="display_name" readonly="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Amenity list View -->
    <record id="view_amenity_list" model="ir.ui.view">
        <field name="name">amenity.amenity.list</field>
        <field name="model">amenity.amenity</field>
        <field name="arch" type="xml">
            <list string="Amenities">
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Amenity Booking list View -->
    <record id="view_amenity_booking_list" model="ir.ui.view">
        <field name="name">amenity.booking.list</field>
        <field name="model">amenity.booking</field>
        <field name="arch" type="xml">
            <list string="Bookings">
                <field name="amenity_id"/>
                <field name="tenant_id"/>
                <field name="booking_date"/>
                <field name="time_slot_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Actions and Menus -->
    <record id="action_amenity" model="ir.actions.act_window">
        <field name="name">Amenities</field>
        <field name="res_model">amenity.amenity</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="action_amenity_booking" model="ir.actions.act_window">
        <field name="name">Amenity Bookings</field>
        <field name="res_model">amenity.booking</field>
        <field name="view_mode">list,form</field>
    </record>

