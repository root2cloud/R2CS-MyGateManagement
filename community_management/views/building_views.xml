<odoo>
    <record id="view_form_building_management" model="ir.ui.view">
        <field name="name">building.management.form</field>
        <field name="model">building.management</field>
        <field name="arch" type="xml">
            <form string="Building">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="community_id"/>

                        <field name="total_floors"/>
                        <field name="building_image"/>
                    </group>
                    <notebook>
                        <page string="Floors">
                            <field name="floor_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="total_flats"/>
                                    <field name="description"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <record id="view_list_building_management" model="ir.ui.view">
        <field name="name">building.management.list</field>
        <field name="model">building.management</field>
        <field name="arch" type="xml">
            <list string="Building">
                <field name="name"/>
                <field name="community_id"/>
                <field name="total_floors"/>
            </list>
        </field>
    </record>
    <record id="action_building_management" model="ir.actions.act_window">
        <field name="name">Buildings</field>
        <field name="res_model">building.management</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_building_management" name="Buildings" parent="menu_master_data_root"
              action="action_building_management"/>
</odoo>
