<odoo>
    <!-- Form View -->
    <record id="view_form_family_member" model="ir.ui.view">
        <field name="name">family.member.form</field>
        <field name="model">family.member</field>
        <field name="arch" type="xml">
            <form string="Family Member">
                <sheet>
                    <field name="photo" widget="image" class="oe_avatar"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="member_type"/>
                            <field name="relationship"/>
                            <field name="gender"/>
                        </group>
                        <group>
                            <field name="tenant_id"/>
                            <field name="flat_id"/>
                            <field name="building_id"/>
                        </group>
                    </group>

                    <group>
                        <group string="Contact Information">
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="aadhaar_number"/>
                        </group>
                        <group string="Additional Information">
                            <field name="date_of_birth"/>
                            <field name="age"/>
                        </group>
                    </group>

                    <group>
                        <field name="notes" placeholder="Additional notes..."/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_list_family_member" model="ir.ui.view">
        <field name="name">family.member.list</field>
        <field name="model">family.member</field>
        <field name="arch" type="xml">
            <list string="Family Members">
                <field name="photo" widget="image" options="{'size': [50, 50]}"/>
                <field name="name"/>
                <field name="member_type"/>
                <field name="relationship"/>
                <field name="age"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="tenant_id"/>
                <field name="flat_id"/>
                <field name="building_id"/>
            </list>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_kanban_family_member" model="ir.ui.view">
        <field name="name">family.member.kanban</field>
        <field name="model">family.member</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="photo"/>
                <field name="name"/>
                <field name="member_type"/>
                <field name="relationship"/>
                <field name="age"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="tenant_id"/>
                <field name="flat_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_details">
                                <div style="text-align: center; margin-bottom: 10px;">
                                    <t t-if="record.photo.raw_value">
                                        <img t-att-src="kanban_image('family.member', 'photo', record.id.raw_value)"
                                             style="width: 100px; height: 100px; object-fit: cover; border-radius: 50%;"/>
                                    </t>
                                    <t t-else="">
                                        <i class="fa fa-user-circle" style="font-size: 100px; color: #ccc;"/>
                                    </t>
                                </div>
                                <strong><field name="name"/></strong><br/>
                                <span t-attf-class="badge badge-pill badge-#{record.member_type.raw_value == 'adult' ? 'info' : 'warning'}">
                                    <field name="member_type"/>
                                </span><br/>
                                <span t-if="record.relationship.raw_value"><i class="fa fa-heart"/> <field name="relationship"/></span><br/>
                                <span t-if="record.age.raw_value"><i class="fa fa-birthday-cake"/> <field name="age"/> years</span><br/>
                                <span t-if="record.email.raw_value"><i class="fa fa-envelope"/> <field name="email"/></span><br/>
                                <span t-if="record.phone.raw_value"><i class="fa fa-phone"/> <field name="phone"/></span><br/>
                                <div style="margin-top: 8px; padding-top: 8px; border-top: 1px solid #eee;">
                                    <span><i class="fa fa-user"/> <field name="tenant_id"/></span><br/>
                                    <span t-if="record.flat_id.raw_value"><i class="fa fa-home"/> <field name="flat_id"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_search_family_member" model="ir.ui.view">
        <field name="name">family.member.search</field>
        <field name="model">family.member</field>
        <field name="arch" type="xml">
            <search string="Family Members">
                <field name="name"/>
                <field name="tenant_id"/>
                <field name="flat_id"/>
                <field name="building_id"/>
                <filter name="filter_adult" string="Adults" domain="[('member_type', '=', 'adult')]"/>
                <filter name="filter_child" string="Children" domain="[('member_type', '=', 'child')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_tenant" string="Tenant" context="{'group_by': 'tenant_id'}"/>
                    <filter name="group_flat" string="Flat" context="{'group_by': 'flat_id'}"/>
                    <filter name="group_building" string="Building" context="{'group_by': 'building_id'}"/>
                    <filter name="group_member_type" string="Type" context="{'group_by': 'member_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_family_member" model="ir.actions.act_window">
        <field name="name">Family Members</field>
        <field name="res_model">family.member</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <!-- Menu -->





</odoo>
