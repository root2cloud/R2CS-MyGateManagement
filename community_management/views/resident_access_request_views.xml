<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ========================= -->
    <!-- list VIEW -->
    <!-- ========================= -->
    <record id="view_resident_access_request_list" model="ir.ui.view">
        <field name="name">resident.access.request.list</field>
        <field name="model">resident.access.request</field>
        <field name="arch" type="xml">
            <list string="Resident Access Requests">
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="community_id"/>
                <field name="building_id"/>
                <field name="flat_id"/>
                <field name="occupancy_type"/>
                <field name="state"/>
                <field name="submitted_date"/>
                <field name="lease_start_date"/>
                <field name="lease_end_date"/>
                <field name="owner_id"/>
                <field name="flat_transaction_id" widget="many2one" options="{'no_create': True, 'no_open': True}"/>
            </list>
        </field>
    </record>

    <!-- ========================= -->
    <!-- FORM VIEW -->
    <!-- ========================= -->
    <record id="view_resident_access_request_form" model="ir.ui.view">
        <field name="name">resident.access.request.form</field>
        <field name="model">resident.access.request</field>
        <field name="arch" type="xml">
            <form string="Resident Access Request">
                <header>
                    <button name="action_submit"
                            type="object"
                            string="Submit"
                            class="btn-primary"
                            invisible="state != 'draft'"/>

                    <button name="action_approve"
                            string="Approve"
                            type="object"
                            class="btn-primary"
                            invisible="not is_current_approver"/>

                    <button name="action_reject"
                            string="Reject"
                            type="object"
                            class="btn-danger"
                            invisible="not is_current_approver"/>


                    <!-- View Lease Transaction Button -->
                    <button name="action_view_flat_transaction"
                            type="object"
                            string="View Lease Transaction"
                            class="btn-info"
                            invisible="state != 'approved' or not flat_transaction_id"/>

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,pending,approved,rejected"/>
                </header>

                <sheet>
                    <group>
                        <group string="Requester Details">
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>

                        <group string="Location Details">
                            <field name="community_id"/>
                            <field name="building_id"/>
                            <field name="floor_id"/>
                            <field name="flat_id"/>
                        </group>
                    </group>

                    <group>
                        <group string="Occupancy">
                            <field name="occupancy_type"/>
                            <field name="approver_id"/>
                            <field name="lease_start_date"/>
                            <field name="lease_end_date"/>
                            <field name="owner_id"/>
                        </group>

                        <group string="Documents">
                            <field name="rental_agreement_datas" filename="rental_agreement_filename"/>
                        </group>
                    </group>

                    <!-- Link to Lease Transaction -->
                    <group string="Generated Lease" invisible="state != 'approved'">
                        <group>
                            <field name="flat_transaction_id" string="Lease Transaction"
                                   readonly="1" widget="many2one" options="{'no_create': True}"/>
                        </group>
                    </group>

                    <group string="System Info" invisible="1">
                        <field name="partner_id"/>
                        <field name="user_id"/>
                        <field name="submitted_date"/>
                    </group>

                </sheet>

                <chatter>
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </chatter>

            </form>
        </field>
    </record>

    <!-- ========================= -->
    <!-- ACTION -->
    <!-- ========================= -->
    <record id="action_resident_access_request" model="ir.actions.act_window">
        <field name="name">Resident Access Requests</field>
        <field name="res_model">resident.access.request</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>

