<odoo>
    <record id="view_community_post_list" model="ir.ui.view">
        <field name="name">community.post.list</field>
        <field name="model">community.post</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="author_id"/>
                <field name="community_id"/>
                <field name="like_count"/>
                <field name="view_count"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <record id="view_community_post_form" model="ir.ui.view">
        <field name="name">community.post.form</field>
        <field name="model">community.post</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="author_id"/>
                        <field name="community_id"/>
                    </group>
                    <field name="description"/>
                    <field name="image"/>
                    <group>
                        <field name="like_count" readonly="1"/>
                        <field name="view_count" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_community_post" model="ir.actions.act_window">
        <field name="name">Community Posts</field>
        <field name="res_model">community.post</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and manage community posts created by tenants.
            </p>
        </field>
    </record>


</odoo>
