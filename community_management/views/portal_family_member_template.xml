<odoo>
    <data>
        <!-- Portal Page: Family Members List -->
        <template id="portal_my_family_members" name="My Family Members">
            <t t-call="portal.portal_layout">
                <style>
                    /* Family Members Portal Styling */
                    .family-portal-header {
                    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                    color: white;
                    padding: 2rem 0;
                    margin-bottom: 2rem;
                    border-radius: 10px;
                    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
                    }

                    .family-portal-header h3 {
                    margin: 0;
                    font-weight: 600;
                    font-size: 1.8rem;
                    }

                    .family-card {
                    border: none;
                    border-radius: 15px;
                    overflow: hidden;
                    transition: all 0.3s ease;
                    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
                    height: 100%;
                    }

                    .family-card:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
                    }

                    .family-card-img-top {
                    height: 220px;
                    object-fit: cover;
                    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
                    }

                    .family-card-body {
                    padding: 1.5rem;
                    }

                    .family-card-title {
                    font-size: 1.25rem;
                    font-weight: 600;
                    color: #2d3748;
                    margin-bottom: 0.75rem;
                    }

                    .family-badge {
                    display: inline-block;
                    padding: 0.35rem 0.75rem;
                    border-radius: 20px;
                    font-size: 0.875rem;
                    font-weight: 500;
                    margin-bottom: 0.5rem;
                    }

                    .family-badge-adult {
                    background-color: #e6f2ff;
                    color: #0066cc;
                    }

                    .family-badge-child {
                    background-color: #fff3cd;
                    color: #856404;
                    }

                    .family-info-item {
                    display: block;
                    margin-bottom: 0.5rem;
                    color: #718096;
                    font-size: 0.9rem;
                    }

                    .family-info-item i {
                    width: 20px;
                    text-align: center;
                    margin-right: 5px;
                    color: #a0aec0;
                    }

                    .btn-family-edit {
                    background-color: #667eea;
                    border-color: #667eea;
                    color: white;
                    border-radius: 8px;
                    padding: 0.5rem 1rem;
                    font-size: 0.875rem;
                    transition: all 0.3s ease;
                    }

                    .btn-family-edit:hover {
                    background-color: #5568d3;
                    border-color: #5568d3;
                    color: white;
                    transform: translateY(-2px);
                    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
                    }

                    .btn-family-delete {
                    background-color: #fc8181;
                    border-color: #fc8181;
                    color: white;
                    border-radius: 8px;
                    padding: 0.5rem 1rem;
                    font-size: 0.875rem;
                    transition: all 0.3s ease;
                    }

                    .btn-family-delete:hover {
                    background-color: #f56565;
                    border-color: #f56565;
                    color: white;
                    transform: translateY(-2px);
                    box-shadow: 0 5px 15px rgba(252, 129, 129, 0.3);
                    }

                    .btn-add-member {
                    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                    border: none;
                    border-radius: 10px;
                    padding: 0.75rem 1.5rem;
                    font-weight: 500;
                    transition: all 0.3s ease;
                    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
                    }

                    .btn-add-member:hover {
                    transform: translateY(-2px);
                    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
                    }

                    .empty-state {
                    text-align: center;
                    padding: 4rem 2rem;
                    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
                    border-radius: 15px;
                    }

                    .empty-state i {
                    font-size: 5rem;
                    color: #cbd5e0;
                    margin-bottom: 1.5rem;
                    }

                    .empty-state h4 {
                    color: #4a5568;
                    margin-bottom: 0.5rem;
                    }

                    .empty-state p {
                    color: #718096;
                    margin-bottom: 1.5rem;
                    }
                </style>

                <div class="container mt-4">
                    <div class="row">
                        <div class="col-12">
                            <div class="family-portal-header d-flex justify-content-between align-items-center px-4">
                                <h3>
                                    <i class="fa fa-users mr-2"/>
                                    My Family Members
                                </h3>
                                <a href="/my/family/new" class="btn btn-light btn-add-member">
                                    <i class="fa fa-plus mr-1"/>
                                    Add Family Member
                                </a>
                            </div>

                            <t t-if="family_members">
                                <div class="row">
                                    <t t-foreach="family_members" t-as="member">
                                        <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
                                            <div class="card family-card">
                                                <t t-if="member.photo">
                                                    <img t-att-src="image_data_uri(member.photo)"
                                                         class="card-img-top family-card-img-top"/>
                                                </t>
                                                <t t-else="">
                                                    <div class="family-card-img-top d-flex align-items-center justify-content-center">
                                                        <i class="fa fa-user-circle"
                                                           style="font-size: 5rem; color: #cbd5e0;"/>
                                                    </div>
                                                </t>
                                                <div class="card-body family-card-body">
                                                    <h5 class="family-card-title">
                                                        <t t-esc="member.name"/>
                                                    </h5>
                                                    <span t-attf-class="family-badge family-badge-#{member.member_type == 'adult' and 'adult' or 'child'}">
                                                        <t t-esc="member.member_type.title()"/>
                                                    </span>
                                                    <div class="mt-2">
                                                        <t t-if="member.relationship">
                                                            <small class="family-info-item">
                                                                <i class="fa fa-heart"/>
                                                                <t t-esc="member.relationship.title()"/>
                                                            </small>
                                                        </t>
                                                        <t t-if="member.age">
                                                            <small class="family-info-item">
                                                                <i class="fa fa-birthday-cake"/>
                                                                <t t-esc="member.age"/>
                                                                years
                                                            </small>
                                                        </t>
                                                        <t t-if="member.email">
                                                            <small class="family-info-item">
                                                                <i class="fa fa-envelope"/>
                                                                <t t-esc="member.email"/>
                                                            </small>
                                                        </t>
                                                        <t t-if="member.phone">
                                                            <small class="family-info-item">
                                                                <i class="fa fa-phone"/>
                                                                <t t-esc="member.phone"/>
                                                            </small>
                                                        </t>
                                                    </div>
                                                    <div class="mt-3 d-flex" style="gap: 0.5rem;">
                                                        <a t-attf-href="/my/family/#{member.id}/edit"
                                                           class="btn btn-sm btn-family-edit flex-fill">
                                                            <i class="fa fa-edit"/>
                                                            Edit
                                                        </a>
                                                        <a t-attf-href="/my/family/#{member.id}/delete"
                                                           class="btn btn-sm btn-family-delete flex-fill"
                                                           onclick="return confirm('Are you sure you want to delete this family member?');">
                                                            <i class="fa fa-trash"/>
                                                            Delete
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </t>
                            <t t-else="">
                                <div class="empty-state">
                                    <i class="fa fa-users"/>
                                    <h4>No family members yet</h4>
                                    <p class="text-muted">Start building your family profile by adding your first family
                                        member
                                    </p>
                                    <a href="/my/family/new" class="btn btn-primary btn-add-member">
                                        <i class="fa fa-plus mr-1"/>
                                        Add Your First Family Member
                                    </a>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Portal Page: Add/Edit Family Member Form -->
        <template id="portal_family_member_form" name="Family Member Form">
            <t t-call="portal.portal_layout">
                <style>
                    /* Form Styling */
                    .family-form-header {
                    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                    color: white;
                    padding: 2rem;
                    margin: -2.5rem -2.5rem 2.5rem -2.5rem;
                    border-radius: 15px 15px 0 0;
                    text-align: center;
                    }

                    .family-form-header h3 {
                    margin: 0;
                    font-weight: 600;
                    font-size: 1.75rem;
                    }

                    .family-form-header i {
                    font-size: 2.5rem;
                    margin-bottom: 0.5rem;
                    display: block;
                    }

                    .family-form-container {
                    background: white;
                    padding: 2.5rem;
                    border-radius: 15px;
                    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
                    margin-bottom: 3rem;
                    }

                    .family-form-container .form-section {
                    margin-bottom: 2rem;
                    padding-bottom: 2rem;
                    border-bottom: 2px solid #f7fafc;
                    }

                    .family-form-container .form-section:last-of-type {
                    border-bottom: none;
                    margin-bottom: 0;
                    padding-bottom: 0;
                    }

                    .family-form-container .section-title {
                    font-size: 1.1rem;
                    font-weight: 600;
                    color: #2d3748;
                    margin-bottom: 1.5rem;
                    display: flex;
                    align-items: center;
                    }

                    .family-form-container .section-title i {
                    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                    color: white;
                    width: 35px;
                    height: 35px;
                    border-radius: 8px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    margin-right: 0.75rem;
                    font-size: 1rem;
                    }

                    .family-form-container label {
                    font-weight: 600;
                    color: #4a5568;
                    margin-bottom: 0.5rem;
                    display: flex;
                    align-items: center;
                    font-size: 0.95rem;
                    }

                    .family-form-container label i {
                    margin-right: 0.5rem;
                    color: #a0aec0;
                    width: 18px;
                    text-align: center;
                    }

                    .family-form-container label .required {
                    color: #e53e3e;
                    margin-left: 0.25rem;
                    }

                    .family-form-container .form-control {
                    border-radius: 10px;
                    border: 2px solid #e2e8f0;
                    padding: 0.75rem 1rem;
                    transition: all 0.3s ease;
                    font-size: 0.95rem;
                    }

                    .family-form-container .form-control:focus {
                    border-color: #667eea;
                    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
                    outline: none;
                    }

                    .family-form-container textarea.form-control {
                    resize: vertical;
                    min-height: 100px;
                    }

                    .photo-upload-area {
                    border: 2px dashed #cbd5e0;
                    border-radius: 10px;
                    padding: 1.5rem;
                    text-align: center;
                    transition: all 0.3s ease;
                    background: #f7fafc;
                    position: relative;
                    }

                    .photo-upload-area:hover {
                    border-color: #667eea;
                    background: #edf2f7;
                    }

                    .photo-upload-area i {
                    font-size: 3rem;
                    color: #cbd5e0;
                    display: block;
                    margin-bottom: 0.5rem;
                    }

                    .photo-upload-area p {
                    margin: 0;
                    color: #718096;
                    font-size: 0.9rem;
                    }

                    .photo-preview {
                    margin-top: 1rem;
                    border-radius: 10px;
                    overflow: hidden;
                    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
                    max-width: 250px;
                    margin-left: auto;
                    margin-right: auto;
                    }

                    .form-actions {
                    display: flex;
                    gap: 1rem;
                    justify-content: center;
                    margin-top: 2.5rem;
                    padding-top: 2rem;
                    border-top: 2px solid #f7fafc;
                    }

                    .family-form-container .btn-primary {
                    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                    border: none;
                    border-radius: 10px;
                    padding: 0.875rem 2.5rem;
                    font-weight: 600;
                    font-size: 1rem;
                    transition: all 0.3s ease;
                    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
                    }

                    .family-form-container .btn-primary:hover {
                    transform: translateY(-2px);
                    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
                    }

                    .family-form-container .btn-secondary {
                    border-radius: 10px;
                    padding: 0.875rem 2.5rem;
                    font-weight: 600;
                    font-size: 1rem;
                    transition: all 0.3s ease;
                    background: #e2e8f0;
                    border: 2px solid #cbd5e0;
                    color: #4a5568;
                    }

                    .family-form-container .btn-secondary:hover {
                    background: #cbd5e0;
                    border-color: #a0aec0;
                    transform: translateY(-2px);
                    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
                    }

                    @media (max-width: 768px) {
                    .family-form-header h3 {
                    font-size: 1.5rem;
                    }

                    .family-form-container {
                    padding: 1.5rem;
                    }

                    .family-form-header {
                    margin: -1.5rem -1.5rem 1.5rem -1.5rem;
                    padding: 1.5rem;
                    }

                    .form-actions {
                    flex-direction: column;
                    }

                    .form-actions .btn {
                    width: 100%;
                    }
                    }
                </style>

                <div class="container mt-4 mb-5">
                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <div class="family-form-container">
                                <div class="family-form-header">
                                    <i t-if="member" class="fa fa-edit"/>
                                    <i t-else="" class="fa fa-user-plus"/>
                                    <h3 t-if="member">Edit Family Member</h3>
                                    <h3 t-else="">Add Family Member</h3>
                                </div>

                                <form action="/my/family/save" method="POST" enctype="multipart/form-data">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="member_id"
                                           t-att-value="member.id if member else 'None'"/>

                                    <!-- Photo Section -->
                                    <div class="form-section">
                                        <div class="section-title">
                                            <i class="fa fa-camera"/>
                                            <span>Profile Photo</span>
                                        </div>
                                        <div class="photo-upload-area">
                                            <i class="fa fa-cloud-upload"/>
                                            <p>Click to upload or drag and drop</p>
                                            <input type="file" class="form-control-file" id="photo" name="photo"
                                                   accept="image/*"
                                                   style="position: absolute; opacity: 0; width: 100%; height: 100%; top: 0; left: 0; cursor: pointer;"/>
                                        </div>
                                        <t t-if="member and member.photo">
                                            <img t-att-src="image_data_uri(member.photo)" class="photo-preview"/>
                                        </t>
                                    </div>

                                    <!-- Personal Information -->
                                    <div class="form-section">
                                        <div class="section-title">
                                            <i class="fa fa-user"/>
                                            <span>Personal Information</span>
                                        </div>

                                        <div class="form-group">
                                            <label for="name">
                                                <i class="fa fa-id-card"/>
                                                Full Name
                                                <span class="required">*</span>
                                            </label>
                                            <input type="text" class="form-control" id="name" name="name"
                                                   t-att-value="member.name if member else ''" required="1"
                                                   placeholder="Enter full name"/>
                                        </div>

                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="member_type">
                                                    <i class="fa fa-users"/>
                                                    Type
                                                    <span class="required">*</span>
                                                </label>
                                                <select class="form-control" id="member_type" name="member_type"
                                                        required="1">
                                                    <option value="adult"
                                                            t-att-selected="member and member.member_type == 'adult' and 'selected' or ''">
                                                        Adult
                                                    </option>
                                                    <option value="child"
                                                            t-att-selected="member and member.member_type == 'child' and 'selected' or ''">
                                                        Child
                                                    </option>
                                                </select>
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label for="gender">
                                                    <i class="fa fa-venus-mars"/>
                                                    Gender
                                                </label>
                                                <select class="form-control" id="gender" name="gender">
                                                    <option value="">Select gender...</option>
                                                    <option value="male"
                                                            t-att-selected="member and member.gender == 'male' and 'selected' or ''">
                                                        Male
                                                    </option>
                                                    <option value="female"
                                                            t-att-selected="member and member.gender == 'female' and 'selected' or ''">
                                                        Female
                                                    </option>
                                                    <option value="other"
                                                            t-att-selected="member and member.gender == 'other' and 'selected' or ''">
                                                        Other
                                                    </option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="relationship">
                                                    <i class="fa fa-heart"/>
                                                    Relationship
                                                </label>
                                                <select class="form-control" id="relationship" name="relationship">
                                                    <option value="">Select relationship...</option>
                                                    <option value="spouse"
                                                            t-att-selected="member and member.relationship == 'spouse' and 'selected' or ''">
                                                        Spouse
                                                    </option>
                                                    <option value="son"
                                                            t-att-selected="member and member.relationship == 'son' and 'selected' or ''">
                                                        Son
                                                    </option>
                                                    <option value="daughter"
                                                            t-att-selected="member and member.relationship == 'daughter' and 'selected' or ''">
                                                        Daughter
                                                    </option>
                                                    <option value="father"
                                                            t-att-selected="member and member.relationship == 'father' and 'selected' or ''">
                                                        Father
                                                    </option>
                                                    <option value="mother"
                                                            t-att-selected="member and member.relationship == 'mother' and 'selected' or ''">
                                                        Mother
                                                    </option>
                                                    <option value="brother"
                                                            t-att-selected="member and member.relationship == 'brother' and 'selected' or ''">
                                                        Brother
                                                    </option>
                                                    <option value="sister"
                                                            t-att-selected="member and member.relationship == 'sister' and 'selected' or ''">
                                                        Sister
                                                    </option>
                                                    <option value="other"
                                                            t-att-selected="member and member.relationship == 'other' and 'selected' or ''">
                                                        Other
                                                    </option>
                                                </select>
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label for="date_of_birth">
                                                    <i class="fa fa-birthday-cake"/>
                                                    Date of Birth
                                                </label>
                                                <input type="date" class="form-control" id="date_of_birth"
                                                       name="date_of_birth"
                                                       t-att-value="member.date_of_birth if member else ''"/>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Contact Information -->
                                    <div class="form-section">
                                        <div class="section-title">
                                            <i class="fa fa-address-card"/>
                                            <span>Contact Information</span>
                                        </div>

                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="email">
                                                    <i class="fa fa-envelope"/>
                                                    Email Address
                                                </label>
                                                <input type="email" class="form-control" id="email" name="email"
                                                       t-att-value="member.email if member else ''"
                                                       placeholder="example@email.com"/>
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label for="phone">
                                                    <i class="fa fa-phone"/>
                                                    Phone Number
                                                </label>
                                                <input type="tel" class="form-control" id="phone" name="phone"
                                                       t-att-value="member.phone if member else ''"
                                                       placeholder="+1 234 567 8900"/>
                                            </div>

                                            <div class="form-group">
                                                <label for="aadhaar_number">
                                                    <i class="fa fa-id-card"/>
                                                    Aadhaar Number
                                                </label>
                                                <input type="text" class="form-control" id="aadhaar_number"
                                                       name="aadhaar_number"
                                                       t-att-value="member.aadhaar_number if member else ''"
                                                       placeholder="Enter Aadhaar Number"/>
                                            </div>

                                        </div>
                                    </div>

                                    <!-- Additional Information -->
                                    <div class="form-section">
                                        <div class="section-title">
                                            <i class="fa fa-sticky-note"/>
                                            <span>Additional Notes</span>
                                        </div>


                                        <div class="form-group">
                                            <label for="notes">
                                                <i class="fa fa-pencil"/>
                                                Notes (Optional)
                                            </label>
                                            <textarea class="form-control" id="notes" name="notes" rows="4"
                                                      placeholder="Add any additional information here...">
                                                <t t-if="member" t-esc="member.notes"/>
                                            </textarea>
                                        </div>
                                    </div>

                                    <!-- Form Actions -->
                                    <div class="form-actions">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-check mr-2"/>
                                            Save Family Member
                                        </button>
                                        <a href="/my/family" class="btn btn-secondary">
                                            <i class="fa fa-times mr-2"/>
                                            Cancel
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
