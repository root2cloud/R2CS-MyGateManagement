<odoo>
    <template id="portal_notice_board" name="Community Dashboard - Black &amp; White Elegance">
        <t t-call="website.layout">
            <style>
                :root {
                    --primary: #000000;
                    --primary-light: #ffffff;
                    --text: #1a1a1a;
                    --text-light: #333333;
                    --text-muted: #666666;
                    --bg-card: rgba(255, 255, 255, 0.94);
                    --border-card: rgba(0, 0, 0, 0.12);
                    --shadow-sm: 0 8px 28px rgba(0, 0, 0, 0.08);
                    --shadow-md: 0 16px 45px rgba(0, 0, 0, 0.12);
                    --shadow-hover: 0 25px 80px rgba(0, 0, 0, 0.18);
                    --glow: rgba(0, 0, 0, 0.15);
                    --radius-lg: 24px;
                    --transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
                }

                /* Sophisticated Black &amp; White Gradient Background */
                .dashboard-page {
                    min-height: 100vh;
                    background: linear-gradient(135deg,
                        #ffffff 0%,
                        #f5f5f5 20%,
                        #e0e0e0 40%,
                        #cccccc 60%,
                        #999999 80%,
                        #111111 100%);
                    padding: 4rem 1rem 6rem;
                    position: relative;
                    overflow: hidden;
                }

                .dashboard-page::before {
                    content: '';
                    position: absolute;
                    inset: 0;
                    background:
                        radial-gradient(circle at 20% 80%, rgba(255, 255, 255, 0.5) 0%, transparent 50%),
                        radial-gradient(circle at 80% 20%, rgba(0, 0, 0, 0.2) 0%, transparent 50%);
                    pointer-events: none;
                }

                .dashboard-container { max-width: 1600px; margin: 0 auto; position: relative; z-index: 1; }

                .dashboard-header { text-align: center; margin-bottom: 4rem; }
                .dashboard-header h1 {
                    font-size: 3.8rem; font-weight: 800; margin: 0 0 1rem;
                    background: linear-gradient(90deg, #000000, #444444, #666666);
                    -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;
                }
                .dashboard-header p { font-size: 1.35rem; color: var(--text-muted); max-width: 720px; margin: 0 auto; line-height: 1.6; }

                .stats-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap: 2rem; margin-bottom: 4.5rem; }
                .stat-card {
                    background: var(--bg-card); backdrop-filter: blur(12px); border-radius: var(--radius-lg);
                    padding: 2rem; text-align: center; box-shadow: var(--shadow-sm); border: 1px solid var(--border-card);
                    transition: var(--transition);
                }
                .stat-card:hover { transform: translateY(-6px); box-shadow: var(--shadow-md); }
                .stat-icon { font-size: 2.5rem; color: #000000; margin-bottom: 1rem; }
                .stat-number { font-size: 2.7rem; font-weight: 800; color: var(--text); }
                .stat-label { color: var(--text-muted); font-size: 1.1rem; font-weight: 600; }

                .notices-grid {
                    display: grid;
                    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
                    gap: 2.4rem;
                }

                .notice-card {
                    background: var(--bg-card);
                    backdrop-filter: blur(16px);
                    border-radius: var(--radius-lg);
                    overflow: hidden;
                    box-shadow: var(--shadow-sm);
                    border: 1px solid var(--border-card);
                    transition: var(--transition);
                    display: flex;
                    flex-direction: column;
                    height: 100%;
                    position: relative;
                }
                .notice-card:hover {
                    transform: translateY(-10px);
                    box-shadow: var(--shadow-hover), 0 0 50px var(--glow);
                    border-color: rgba(0, 0, 0, 0.3);
                }

                .badge-new {
                    position: absolute; top: 18px; right: -8px;
                    background: linear-gradient(135deg, #000000, #333333);
                    color: white; padding: 0.5rem 1.4rem; font-size: 0.85rem; font-weight: 800;
                    border-radius: 50px; box-shadow: 0 6px 18px rgba(0,0,0,0.5); z-index: 10;
                    transform: rotate(12deg);
                }

                .notice-header { padding: 2rem 2rem 1.4rem; }
                .notice-type {
                    display: inline-block; background: linear-gradient(90deg, #333333, #000000);
                    color: white; padding: 0.6rem 1.4rem; border-radius: 50px; font-size: 0.95rem; font-weight: 700;
                    box-shadow: 0 5px 15px rgba(0,0,0,0.3);
                }
                .notice-title { font-size: 1.75rem; font-weight: 800; color: var(--text); margin: 1.2rem 0 0.8rem; line-height: 1.3; }

                .notice-dates {
                    color: var(--text-light); font-size: 1rem; font-weight: 600;
                    background: rgba(0,0,0,0.08); padding: 0.6rem 1.2rem; border-radius: 14px;
                    display: inline-block; border: 1px solid rgba(0,0,0,0.15);
                }

                .notice-preview {
                    padding: 0 2rem 1.2rem;
                    flex-grow: 1;
                    display: flex;
                    flex-direction: column;
                }

                /* Image appears first when card opens */
                .notice-image-preview {
                    height: 240px;
                    overflow: hidden;
                    margin: 1.2rem -2rem 1.5rem;
                    order: -1; /* Forces image to top */
                }
                .notice-image-preview img {
                    width: 100%; height: 100%; object-fit: cover; transition: transform 0.8s ease;
                }
                .notice-card:hover .notice-image-preview img { transform: scale(1.1); }

                .notice-short-desc {
                    color: var(--text-muted);
                    line-height: 1.7;
                    font-size: 1.02rem;
                    display: -webkit-box;
                    -webkit-line-clamp: 6;
                    -webkit-box-orient: vertical;
                    overflow: hidden;
                    margin-top: 0;
                }

                .notice-footer { padding: 0 2rem 2rem; text-align: right; }
                .btn-view-details {
                    display: inline-block;
                    background: linear-gradient(90deg, #000000, #333333);
                    color: white;
                    padding: 0.8rem 1.8rem;
                    border-radius: 50px;
                    font-weight: 700;
                    font-size: 1rem;
                    text-decoration: none;
                    box-shadow: 0 6px 20px rgba(0,0,0,0.4);
                    transition: var(--transition);
                    cursor: pointer;
                }
                .btn-view-details:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 10px 30px rgba(0,0,0,0.5);
                }

                .notice-modal {
                    display: none; position: fixed; z-index: 1000; inset: 0;
                    background-color: rgba(0,0,0,0.7); backdrop-filter: blur(8px);
                    align-items: center; justify-content: center;
                }
                .notice-modal.active { display: flex; }
                .modal-content {
                    background: white; border-radius: var(--radius-lg); max-width: 860px; width: 92%; max-height: 90vh; overflow-y: auto;
                    box-shadow: 0 30px 90px rgba(0,0,0,0.3); position: relative; animation: modalFadeIn 0.4s ease-out;
                }
                @keyframes modalFadeIn { from { opacity: 0; transform: scale(0.92); } to { opacity: 1; transform: scale(1); } }
                .modal-header { padding: 2.4rem 2.8rem 1.4rem; border-bottom: 1px solid #e2e8f0; }
                .modal-body { padding: 2rem 2.8rem 3rem; }
                .modal-close {
                    position: absolute; top: 18px; right: 28px; font-size: 2rem; color: #94a3b8;
                    cursor: pointer; width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;
                    border-radius: 50%; transition: all 0.3s;
                }
                .modal-close:hover { background: #f1f5f9; color: #475569; }
                .modal-image { width: 100%; max-height: 480px; object-fit: contain; border-radius: 16px; margin: 1.8rem 0; background: #f8fafc; }

                .empty-state { grid-column: 1 / -1; text-align: center; padding: 8rem 4rem; background: var(--bg-card); border-radius: var(--radius-lg); box-shadow: var(--shadow-sm); border: 1px dashed rgba(0,0,0,0.2); }

                @media (max-width: 992px) { .notices-grid { grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); } }
                @media (max-width: 768px) { .notices-grid { grid-template-columns: 1fr; } .dashboard-header h1 { font-size: 3rem; } }
            </style>

            <div class="dashboard-page">
                <div class="dashboard-container">
                    <div class="dashboard-header">
                        <h1>Community Dashboard</h1>
                        <p>Welcome back! Here are the latest updates and announcements from your community management.</p>
                    </div>

                    <div class="stats-grid">
                        <div class="stat-card">
                            <div class="stat-icon"><i class="fa fa-bullhorn"/></div>
                            <div class="stat-number" t-esc="len(notices)"/>
                            <div class="stat-label">Active Notices</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon"><i class="fa fa-bell"/></div>
                            <div class="stat-number" t-esc="sum(1 for n in notices if n.create_date > last_viewed)"/>
                            <div class="stat-label">New Since Last Visit</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon"><i class="fa fa-clock"/></div>
                            <div class="stat-number">Today</div>
                            <div class="stat-label">Last Checked</div>
                        </div>
                    </div>

                    <t t-if="not notices">
                        <div class="empty-state">
                            <i class="fa fa-bell-slash" style="font-size:6rem; color:#aaaaaa;"/>
                            <h3>All Quiet Today</h3>
                            <p>There are currently no active notices. Enjoy the calm!</p>
                        </div>
                    </t>
                    <t t-else="">
                        <div class="notices-grid">
                            <t t-foreach="notices" t-as="notice">
                                <div class="notice-card">
                                    <t t-if="notice.create_date > last_viewed">
                                        <div class="badge-new">NEW</div>
                                    </t>

                                    <div class="notice-header">
                                        <span class="notice-type">
                                            <t t-esc="dict(notice._fields['notice_type'].selection)[notice.notice_type]"/>
                                        </span>
                                        <h3 class="notice-title" t-esc="notice.name"/>

                                        <t t-if="notice.date_start or notice.date_end">
                                            <div class="notice-dates">
                                                <t t-if="notice.date_start">From: <strong t-esc="notice.date_start.strftime('%b %d, %Y')"/></t>
                                                <t t-if="notice.date_end"> → To: <strong t-esc="notice.date_end.strftime('%b %d, %Y')"/></t>
                                            </div>
                                        </t>
                                    </div>

                                    <div class="notice-preview">
                                        <!-- Image first (top of card) -->
                                        <t t-if="notice.image">
                                            <div class="notice-image-preview">
                                                <img t-att-src="'data:image/png;base64,%s' % notice.image.decode()" alt="Notice Preview"/>
                                            </div>
                                        </t>

                                        <!-- Description below image -->
                                        <div class="notice-short-desc" t-field="notice.description"/>
                                    </div>

                                    <div class="notice-footer">
                                        <a class="btn-view-details" t-att-data-modal="'notice-modal-' + str(notice.id)">View Details →</a>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </t>
                </div>
            </div>

            <!-- Modals for full details -->
            <t t-foreach="notices" t-as="notice">
                <div t-att-id="'notice-modal-' + str(notice.id)" class="notice-modal">
                    <div class="modal-content">
                        <span class="modal-close">×</span>
                        <div class="modal-header">
                            <span class="notice-type">
                                <t t-esc="dict(notice._fields['notice_type'].selection)[notice.notice_type]"/>
                            </span>
                            <h2 style="font-size:2.3rem; margin:1.4rem 0; color:var(--text);" t-esc="notice.name"/>

                            <t t-if="notice.date_start or notice.date_end">
                                <div class="notice-dates" style="font-size:1.1rem;">
                                    <t t-if="notice.date_start">From: <strong t-esc="notice.date_start.strftime('%b %d, %Y')"/></t>
                                    <t t-if="notice.date_end"> → To: <strong t-esc="notice.date_end.strftime('%b %d, %Y')"/></t>
                                </div>
                            </t>
                        </div>
                        <div class="modal-body">
                            <t t-if="notice.image">
                                <img t-att-src="'data:image/png;base64,%s' % notice.image.decode()" class="modal-image" alt="Full Notice Image"/>
                            </t>
                            <div style="font-size:1.18rem; line-height:1.9; color:#475569;" t-field="notice.description"/>
                        </div>
                    </div>
                </div>
            </t>

            <script>
                // Open modal
                document.querySelectorAll('.btn-view-details').forEach(btn => {
                    btn.addEventListener('click', function() {
                        const modalId = this.dataset.modal;
                        const modal = document.getElementById(modalId);
                        if (modal) modal.classList.add('active');
                    });
                });

                // Close modal
                document.querySelectorAll('.modal-close').forEach(close => {
                    close.addEventListener('click', function() {
                        this.closest('.notice-modal').classList.remove('active');
                    });
                });

                // Close on background click
                document.querySelectorAll('.notice-modal').forEach(modal => {
                    modal.addEventListener('click', function(e) {
                        if (e.target === modal) modal.classList.remove('active');
                    });
                });

                // Close on Esc key
                document.addEventListener('keydown', function(e) {
                    if (e.key === 'Escape') {
                        document.querySelectorAll('.notice-modal.active').forEach(m => m.classList.remove('active'));
                    }
                });
            </script>
        </t>
    </template>
</odoo>
