<odoo>

    <!-- CATEGORY -->
    <record id="view_visiting_help_category_list" model="ir.ui.view">
        <field name="name">visiting.help.category.list</field>
        <field name="model">community.visiting.help.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- WEEK DAYS -->
    <record id="view_week_day_list" model="ir.ui.view">
        <field name="name">week.day.list</field>
        <field name="model">community.week.day</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <!-- VISITING HELP ENTRY -->
    <record id="view_visiting_help_entry_list" model="ir.ui.view">
        <field name="name">visiting.help.entry.list</field>
        <field name="model">community.visiting.help.entry</field>
        <field name="arch" type="xml">
            <list>
                <field name="tenant_id"/>
                <field name="category_id"/>
                <field name="entry_type"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_visiting_help_entry_form" model="ir.ui.view">
        <field name="name">visiting.help.entry.form</field>
        <field name="model">community.visiting.help.entry</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="tenant_id" readonly="1"/>
                        <field name="category_id"/>
                        <field name="entry_type"/>
                        <field name="company_name"/>
                    </group>

                    <group invisible="entry_type != 'once'">
                        <field name="visit_date"/>
                        <field name="start_time"/>
                        <field name="valid_for"/>
                    </group>

                    <group required="entry_type == 'once'">
                        <field name="day_ids" widget="many2many_tags"/>
                        <field name="validity"/>
                        <field name="time_from"/>
                        <field name="time_to"/>
                        <field name="entries_per_day"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_visiting_help_entries" model="ir.actions.act_window">
        <field name="name">Visiting Help Entries</field>
        <field name="res_model">community.visiting.help.entry</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- ACTION: Visiting Help Categories -->
    <record id="action_visiting_help_categories" model="ir.actions.act_window">
        <field name="name">Visiting Help Categories</field>
        <field name="res_model">community.visiting.help.category</field>
        <field name="view_mode">list,form</field>
    </record>





</odoo>
