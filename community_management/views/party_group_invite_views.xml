<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form view -->
    <record id="party_group_invite_form" model="ir.ui.view">
        <field name="name">party.group.invite.form</field>
        <field name="model">party.group.invite</field>
        <field name="arch" type="xml">
            <form string="Party / Group Invite">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="host_id"/>
                        <field name="state"/>
                    </group>

                    <notebook>
                        <page string="Details">
                            <group>
                                <field name="note"/>
                            </group>
                        </page>

                        <page string="Event">
                            <group>
                                <field name="event_date"/>
                                <field name="start_time"/>
                                <field name="valid_hours"/>
                                <field name="location"/>
                                <field name="max_guests"/>
                            </group>
                        </page>

                        <page string="Share">
                            <group>
                                <field name="token"/>
                                <field name="share_link"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <footer>
                    <button string="Set Configured" type="object"
                            name="action_set_configured" class="btn-primary"/>
                    <button string="Activate" type="object"
                            name="action_activate" class="btn-secondary"/>
                    <button string="Close" special="cancel" class="btn-link"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- List view -->
    <record id="party_group_invite_list" model="ir.ui.view">
        <field name="name">party.group.invite.list</field>
        <field name="model">party.group.invite</field>
        <field name="arch" type="xml">
            <list string="Party / Group Invites">
                <field name="name"/>
                <field name="host_id"/>
                <field name="event_date"/>
                <field name="location"/>
                <field name="max_guests"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_party_group_invite" model="ir.actions.act_window">
        <field name="name">Party / Group Invites</field>
        <field name="res_model">party.group.invite</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="party_group_invite_list"/>
        <field name="help" type="html">
            <p>Create Party / Group invites that residents can share from the portal.</p>
        </field>
    </record>

    <!-- Menu (replace parent id with your real parent menu) -->
    <menuitem id="menu_party_group_invite_root"
              name="Party / Group Invites"
              parent="menu_flat_transaction_menu"
              action="action_party_group_invite"
              sequence="50"/>

</odoo>
