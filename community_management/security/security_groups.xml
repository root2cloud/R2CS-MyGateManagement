<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 1. CUSTOM CATEGORY (MUST BE FIRST) -->
    <record id="category_community_management" model="ir.module.category">
        <field name="name">Community Management</field>
    </record>

    <!-- 2. BASE GROUP -->
    <record id="group_community_management" model="res.groups">
        <field name="name">Community Management</field>
        <field name="category_id" ref="community_management.category_community_management"/>
    </record>

    <!-- 3. ROLE GROUPS -->
    <record id="group_community_president" model="res.groups">
        <field name="name">President</field>
        <field name="category_id" ref="community_management.category_community_management"/>
        <field name="implied_ids" eval="[(4, ref('community_management.group_community_management'))]"/>
    </record>

    <record id="group_community_secretary" model="res.groups">
        <field name="name">Secretary</field>
        <field name="category_id" ref="community_management.category_community_management"/>
        <field name="implied_ids" eval="[(4, ref('community_management.group_community_management'))]"/>
    </record>

    <record id="group_community_treasurer" model="res.groups">
        <field name="name">Treasurer</field>
        <field name="category_id" ref="community_management.category_community_management"/>
        <field name="implied_ids" eval="[(4, ref('community_management.group_community_management'))]"/>
    </record>

    <record id="group_community_committee" model="res.groups">
        <field name="name">Committee Member</field>
        <field name="category_id" ref="community_management.category_community_management"/>
        <field name="implied_ids" eval="[(4, ref('community_management.group_community_management'))]"/>
    </record>

    <record id="group_community_representative" model="res.groups">
        <field name="name">Resident Representative</field>
        <field name="category_id" ref="community_management.category_community_management"/>
        <field name="implied_ids" eval="[(4, ref('community_management.group_community_management'))]"/>
    </record>

    <record id="group_security_guard" model="res.groups">
        <field name="name">Security Guard</field>
        <field name="category_id" ref="community_management.category_community_management"/>
        <field name="implied_ids" eval="[(4, ref('community_management.group_community_management'))]"/>
    </record>
</odoo>
