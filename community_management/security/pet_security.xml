<odoo>
    <data noupdate="1">
        <!-- Portal users can only see their own pets -->
        <record id="pet_portal_rule" model="ir.rule">
            <field name="name">Portal User: Own Pets</field>
            <field name="model_id" ref="model_pet_management"/>
            <field name="domain_force">[('tenant_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Internal users can see all pets -->
        <record id="pet_user_rule" model="ir.rule">
            <field name="name">Internal User: All Pets</field>
            <field name="model_id" ref="model_pet_management"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Portal users can only see their own pet vaccinations -->
        <record id="pet_vaccination_portal_rule" model="ir.rule">
            <field name="name">Portal User: Own Pet Vaccinations</field>
            <field name="model_id" ref="model_pet_vaccination"/>
            <field name="domain_force">[('pet_id.tenant_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Internal users can see all pet vaccinations -->
        <record id="pet_vaccination_user_rule" model="ir.rule">
            <field name="name">Internal User: All Pet Vaccinations</field>
            <field name="model_id" ref="model_pet_vaccination"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>
