<odoo>
    <data noupdate="1">
        <!-- Portal users can only see their own vehicles -->
        <record id="vehicle_portal_rule" model="ir.rule">
            <field name="name">Portal User: Own Vehicles</field>
            <field name="model_id" ref="model_vehicle_management"/>
            <field name="domain_force">[('tenant_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Internal users can see all vehicles -->
        <record id="vehicle_user_rule" model="ir.rule">
            <field name="name">Internal User: All Vehicles</field>
            <field name="model_id" ref="model_vehicle_management"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="rule_flat_management_tenant" model="ir.rule">
            <field name="name">Flat: See own flats only</field>
            <field name="model_id" ref="community_management.model_flat_management"/>
            <field name="domain_force">[('tenant_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>


        <record id="portal_room_rule" model="ir.rule">
            <field name="name">Portal Access Rooms</field>
            <field name="model_id" ref="model_room_management"/>
            <field name="domain_force">[('flat_id.tenant_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        </record>

        <record id="portal_flat_rule" model="ir.rule">
            <field name="name">Portal Access Flats</field>
            <field name="model_id" ref="model_flat_management"/>
            <field name="domain_force">['|',
                ('tenant_id', '=', user.partner_id.id),
                ('lease_owner_id', '=', user.partner_id.id)
                ]
            </field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        </record>

    </data>
</odoo>
